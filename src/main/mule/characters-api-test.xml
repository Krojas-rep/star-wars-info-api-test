    <http:listener-config name="HTTP_Listener_config" doc:name="HTTP Listener config" doc:id="556dd2aa-90d9-467d-a4fd-497ee79f98eb" >
		<http:listener-connection host="0.0.0.0" port="${listener.port}" connectionIdleTimeout="${lister.connection.idle.timeout}"/>
	</http:listener-config>
	<flow name="characters-api-test-main">
        <http:listener config-ref="HTTP_Listener_config" path="/api/*">
