                </ee:transform>
				<logger level="INFO" doc:name="Logger" doc:id="d11509cb-1501-437f-ba7e-fc5334cdc204" message="#[payload]" />
            </on-error-propagate>
            <on-error-propagate type="APIKIT:UNSUPPORTED_MEDIA_TYPE">
